<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9E7890E4"
    android:gravity="right"
    android:layout_gravity="right"
    tools:context=".InformationFilmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <ImageView
                android:id="@+id/poster"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp">
            </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="ذخیره"
            android:id="@+id/AddToFavorite"/>
<!--            android:background="@drawable/uninstall"-->


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9E7890E4"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:background="#9E7890E4"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_gravity="right"
                android:padding="10dp">

                <TextView
                    android:id="@+id/titledetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="عنوان"></TextView>

                <TextView
                    android:id="@+id/yeardetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="سال"></TextView>
                <TextView
                    android:id="@+id/runtimedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="مدت زمان"></TextView>
                <TextView
                    android:id="@+id/Genredetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="ژانر"></TextView>
                <TextView
                    android:id="@+id/Writerdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="نویسنده"></TextView>
                <TextView
                    android:id="@+id/Actorsdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="بازیگران"></TextView>
                <TextView
                    android:id="@+id/Languagedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="زبان فیلم"></TextView>
                <TextView
                    android:id="@+id/imdbRatingdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="رتبه ی IMDB"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#9E7890E4"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_gravity="right"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="عنوان"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="سال "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="مدت زمان "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="ژانر "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="نویسنده "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="بازیگران "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="زبان فیلم "></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="رتبه ی IMDB "></TextView>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>